<h1>Articles</h1>

<div class="articles">
	<% @articles.each do |article| %>
	<% article.categories.each do |category| %>
		
		<h1><%= article.subject %> </h1>
		<h2>Category: <%= category.name %></h2>
		<p><%= article.post %></p>
		<h3><%= article.user.user_name %></h3>
		<h5><%= article.post_date %></h5>
		
	<% end %>
	<% end %>
</div>

<div class="articlesImage"></div>
